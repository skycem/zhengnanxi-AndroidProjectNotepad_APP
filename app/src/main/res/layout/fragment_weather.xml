<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ceshibeijing" />

    <TextView
        android:id="@+id/tempera_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="34℃"
        android:textColor="#000000"
        android:textSize="100dp"
        app:layout_constraintBottom_toTopOf="@+id/weather_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@drawable/weather_duoyun_new" />

    <TextView
        android:id="@+id/weather_tianqizhuangkuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:text="晴"
        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/weather_air"
        app:layout_constraintEnd_toStartOf="@+id/fengehao"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempera_now"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fengehao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="|"

        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/weather_air"
        app:layout_constraintTop_toTopOf="@+id/weather_air" />

    <TextView
        android:id="@+id/weather_air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="空气质量"
        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/weather_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempera_now"
        app:layout_constraintVertical_bias="0.512" />

    <ListView
        android:id="@+id/weather_list"
        android:layout_width="389dp"
        android:layout_height="363dp"
        android:layout_marginTop="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="城市"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tempera_now"
        app:layout_constraintEnd_toEndOf="@+id/tempera_now"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/tempera_now" />


</androidx.constraintlayout.widget.ConstraintLayout>